<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to user_path(@book_id.user) do %>
            <%= attachment_image_tag(@book_id.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @book_id.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book_id.title, book_path(@book_id) %></td>
          <td><%= @book_id.body %></td>
          <% if @book_id.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book_id), class: "btn btn-sm btn-success edit_book_#{@book_id.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@book_id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book_id.id}"%></td>
          <% end %>
          <td>
            <% if @book_id.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book_id), class: "favorited", method: :delete do %>
                ♥<%= @book_id.favorites.count %>
              <% end %>
            <% else %>
               <%= link_to book_favorites_path(@book_id), method: :post do %>
                ♥️<%= @book_id.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <td>コメント数：<%= @book_id.book_comments.count %></td>
        </tr>
      </table>
      <% @book_id.book_comments.each do |book_comment| %>
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger", method: :delete %>
          <% end %>
        <p>
          <%= link_to user_path(book_comment.user) do %>
            <%= book_comment.user.name %>
          <% end %>
        </p>
      <% end %>
      <div class="new-comment">
        <%= form_with(model:[@book_id, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, class:'form-control' %><br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
