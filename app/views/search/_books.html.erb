<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <% books.each do |book| %>
      <tbody>
          <tr>
            <th> <%= attachment_image_tag(book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40') %></th>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
          </tr>
      </tbody>
    <% end %>
</table>